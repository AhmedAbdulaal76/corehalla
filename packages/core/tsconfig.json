{
    "compilerOptions": {
        "module": "commonjs",
        "noImplicitReturns": true,
        "noImplicitAny": true,
        "noUnusedLocals": true,
        "sourceMap": true,
        "strict": true,
        "target": "es2017",
        "resolveJsonModule": true,
        "declaration": true,
        "lib": ["ESNext"],
        "outDir": "lib",
        "skipLibCheck": true,
        "baseUrl": ".",
        "paths": {
            "~*": ["./src/*"]
        }
    },
    "include": ["src"],
    "exclude": ["dist", "node_modules", "**/*.spec.ts", "**/*.test.ts"]
}
