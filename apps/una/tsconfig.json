{
    "compilerOptions": {
        "module": "commonjs",
        "noImplicitReturns": true,
        "noUnusedLocals": true,
        "outDir": "dist",
        "sourceMap": true,
        "strict": true,
        "target": "es2017",
        "resolveJsonModule": true,
        "jsx": "react"
    },
    "compileOnSave": true,
    "include": ["src"],
    "exclude": ["dist", "node_modules", "**/*.spec.ts", "**/*.test.ts"]
}
