{
    "hosting": {
        "public": "dist",
        "ignore": ["firebase.json", "**/.*", "**/node_modules/**"],
        "rewrites": [
            {
                "source": "/api/**",
                "function": "api"
            },
            {
                "source": "/**",
                "destination": "/index.html"
            }
        ],
        "predeploy": ["npm run lint", "npm run format", "npm run build:client"]
    },
    "functions": {
        "predeploy": ["npm run lint", "npm run format", "npm run build:server"],
        "runtime": "nodejs10"
    }
}
