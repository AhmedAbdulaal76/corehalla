{
    "hosting": {
        "public": "dist",
        "ignore": ["firebase.json", "**/.*", "**/node_modules/**", "dist/index.html"],
        "rewrites": [
            {
                "source": "**",
                "function": "app"
            }
        ],
        "predeploy": ["npm run lint", "npm run format", "npm run build:client"],
        "cleanUrls": true,
        "trailingSlash": false
    },
    "functions": {
        "predeploy": ["npm run lint", "npm run format", "npm run build:server"],
        "runtime": "nodejs10"
    }
}
