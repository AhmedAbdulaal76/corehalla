{
    "private": true,
    "workspaces": [
        "packages/*",
        "apps/**/*"
    ],
    "scripts": {
        "dist": "lerna run --scope @corehalla/* dist",
        "eslint": "lerna run --parallel eslint",
        "build": "lerna run build",
        "watch": "lerna run --scope @corehalla/* dist:watch",
        "test": "lerna run --parallel test",
        "typecheck": "lerna run --parallel typecheck",
        "lint": "yarn dist && yarn eslint && yarn typecheck && yarn test",
        "format": "prettier --write .",
        "precommit": "yarn format",
        "postinstall": "husky install"
    },
    "devDependencies": {
        "@types/jest": "^26.0.23",
        "@typescript-eslint/eslint-plugin": "^4.22.0",
        "@typescript-eslint/parser": "^4.22.0",
        "eslint": "^7.25.0",
        "eslint-config-prettier": "^8.3.0",
        "eslint-plugin-prettier": "^3.4.0",
        "eslint-plugin-react": "^7.23.2",
        "husky": "^6.0.0",
        "jest": "^26.6.3",
        "lerna": "^4.0.0",
        "lint-staged": "^10.5.4",
        "prettier": "^2.2.1",
        "ts-jest": "^26.5.5",
        "typescript": "^4.2.4"
    },
    "husky": {
        "hooks": {
            "pre-commit": "lint-staged"
        }
    },
    "lint-staged": {
        "*.{ts,js,tsx,jsx}": [
            "eslint --fix",
            "jest --coverage --findRelatedTests",
            "git add"
        ]
    }
}
