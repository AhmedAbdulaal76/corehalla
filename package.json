{
    "private": true,
    "workspaces": [
        "packages/*",
        "www/*",
        "discord/*"
    ],
    "scripts": {
        "build:lib": "lerna run build:lib",
        "eslint": "lerna run --parallel eslint",
        "build": "lerna run build",
        "watch": "lerna run --scope @corehalla/* watch",
        "test": "lerna run --parallel test",
        "typecheck": "lerna run --parallel typecheck",
        "lint": "yarn build:lib && yarn eslint && yarn typecheck && yarn test && yarn format",
        "format": "prettier --write .",
        "precommit": "yarn lint",
        "postinstall": "husky install"
    },
    "devDependencies": {
        "@types/jest": "^26.0.24",
        "@typescript-eslint/eslint-plugin": "^4.28.3",
        "@typescript-eslint/parser": "^4.28.3",
        "eslint": "^7.30.0",
        "eslint-config-prettier": "^8.3.0",
        "eslint-plugin-prettier": "^3.4.0",
        "eslint-plugin-react": "^7.24.0",
        "husky": "^7.0.1",
        "jest": "^27.0.6",
        "lerna": "^4.0.0",
        "lint-staged": "^11.0.1",
        "prettier": "^2.3.2",
        "ts-jest": "^27.0.3",
        "typescript": "^4.3.5"
    },
    "husky": {
        "hooks": {
            "pre-commit": "lint-staged"
        }
    },
    "lint-staged": {
        "*.{ts,js,tsx,jsx}": [
            "eslint --fix",
            "jest --coverage --findRelatedTests",
            "git add"
        ]
    }
}
