{
    "private": true,
    "workspaces": [
        "packages/*",
        "apps/web/*",
        "apps/discord/*"
    ],
    "scripts": {
        "bootstrap": "make bootstrap",
        "codesandbox:build": "make build-no-bundle",
        "test": "jest",
        "tsc": "tsc"
    },
    "devDependencies": {
        "@types/jest": "^26.0.23",
        "@typescript-eslint/eslint-plugin": "^4.22.0",
        "@typescript-eslint/parser": "^4.22.0",
        "eslint": "^7.25.0",
        "eslint-config-prettier": "^8.3.0",
        "eslint-plugin-prettier": "^3.4.0",
        "husky": "^6.0.0",
        "jest": "^26.6.3",
        "lint-staged": "^10.5.4",
        "prettier": "^2.2.1",
        "ts-jest": "^26.5.5",
        "typescript": "^4.2.4"
    },
    "husky": {
        "hooks": {
            "pre-commit": "lint-staged"
        }
    },
    "lint-staged": {
        "*.{ts,js,tsx,jsx}": [
