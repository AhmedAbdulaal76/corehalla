{
    "name": "corehalla",
    "version": "0.0.0",
    "private": true,
    "repository": "https://github.com/djobbo/corehalla.git",
    "author": "Djobbo Ma√Øga <4998293+djobbo@users.noreply.github.com>",
    "scripts": {
        "build": "turbo run build",
        "dev": "turbo run dev --parallel",
        "lint": "eslint --fix --ext .js,.jsx,.ts,.tsx .",
        "format": "prettier --write \"**/*.{ts,tsx,md}\" && turbo run format",
        "ts:check": "turbo run ts:check",
        "ci": "pnpm install --frozen-lockfile",
        "ci:lint": "eslint --ext .js,.jsx,.ts,.tsx .",
        "ci:deadcode": "turbo run ci:deadcode",
        "dl-roster": "turbo run dl-roster",
        "db:migrate": "turbo run db:migrate",
        "db:migrate:prod": "turbo run db:migrate:prod --scope=db --include-dependencies --no-deps",
        "build:prod": "pnpm db:migrate:prod && turbo run build --scope=app --include-dependencies --no-deps",
        "env:up": "zx ./.dev-env/dev-env.zx.mjs up",
        "env:down": "zx ./.dev-env/dev-env.zx.mjs down",
        "env:logs": "zx ./.dev-env/dev-env.zx.mjs logs",
        "env:logs:f": "zx ./.dev-env/dev-env.zx.mjs logs -f",
        "env:restart": "zx ./.dev-env/dev-env.zx.mjs restart",
        "env:build": "zx ./.dev-env/dev-env.zx.mjs build",
        "dev:app": "turbo run dev --filter=app --include-dependencies --no-deps",
        "dev:discord-manager": "turbo run dev --filter=discord-manager --include-dependencies --no-deps"
    },
    "devDependencies": {
        "@typescript-eslint/eslint-plugin": "^5.39.0",
        "@typescript-eslint/parser": "^5.39.0",
        "dotenv": "^16.0.3",
        "eslint": "^8.25.0",
        "eslint-config-next": "^12.3.1",
        "eslint-plugin-jsx-a11y": "^6.6.1",
        "eslint-plugin-prettier": "^4.2.1",
        "eslint-plugin-sort-imports-es6-autofix": "^0.6.0",
        "prettier": "^2.7.1",
        "turbo": "^1.5.5",
        "typescript": "^4.8.4",
        "zx": "^7.1.1"
    },
    "engines": {
        "npm": ">=7.0.0",
        "node": ">=14.0.0"
    },
    "packageManager": "pnpm@7.13.3"
}
